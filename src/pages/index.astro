---
import { getCollection } from "astro:content";

// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from "../layouts/BaseLayout.astro";

// Component Imports
import CallToAction from "../components/CallToAction.astro";
import Grid from "../components/Grid.astro";
import Hero from "../components/Hero.astro";
import Icon from "../components/Icon.astro";
import Pill from "../components/Pill.astro";
import Portfolio from "../components/Portfolio.astro";
import LucideIcon from "../components/LucideIcon.astro";

// Page section components
import ContactCTA from "../components/ContactCTA.astro";
import Skills from "../components/Skills.astro";
import About from "../components/About.astro";
import Experience from "../components/Experience.astro";
import Education from "../components/Education.astro";
import ContactInfo from "../components/ContactInfo.astro";
import LucideIcons from "../components/lucideIcons.astro";

// Content Fetching: List four most recent work projects
const projects = (await getCollection("work"))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<BaseLayout
	title="Manuel Elizondo - Full Stack Developer"
	description="Full Stack JavaScript Developer with 5 years of experience in MERN stack. Specialized in web and mobile development, ERP, e-commerce and scalable systems."
>
	<div class="stack gap-20 lg:gap-48 center">
		<!-- Hero Section -->
		<div id="hero" class="wrapper stack gap-8 lg:gap-20 min-h-[60vh]">
			<header class="hero">
				<Hero
					greeting="Hello, my name is"
					title="Manuel Elizondo"
					tagline={[
						`Full Stack Developer | Web Developer`,
						`Focused on optimization, scalability, and continuous improvement.`,
					]}
					align="center"
				>
					<div class="roles">
						<a
							href="mailto:alejandro.tello.29v@gmail.com"
							target="_blank"
							rel="noopener noreferrer"
							style="text-decoration: none;"
						>
							<Pill
								styles={{
									minHeight: "50px",
									alignItems: "center",
								}}
							>
								<LucideIcons icon="mail" size="1.33em" />
							</Pill>
						</a>
						<a
							href="https://github.com/Alex3496"
							target="_blank"
							rel="noopener noreferrer"
							style="text-decoration: none;"
						>
							<Pill
								styles={{
									minHeight: "50px",
									alignItems: "center",
								}}
							>
								<Icon icon="github-logo" size="1.33em" />
							</Pill>
						</a>
						<a
							href="https://linkedin.com/in/manuel-elizondo-887a7313a/"
							target="_blank"
							rel="noopener noreferrer"
							style="text-decoration: none;"
						>
							<Pill
								styles={{
									minHeight: "50px",
									alignItems: "center",
								}}
							>
								<Icon icon="linkedin-logo" size="1.33em" />
							</Pill>
						</a>
						<a
							href="/portfolio/docs/manuel-elizondo-cv.pdf" 
							target="_blank" 
							rel="noopener noreferrer" 
							download
							style="text-decoration: none;"
						>
							<Pill
								styles={{
									minHeight: "50px",
									alignItems: "center",
								}}
							>
								<LucideIcon icon="resume" size="1.33em" />
							</Pill>
						</a>
					</div>
				</Hero>
			</header>
		</div>
		
		<div class="wrapper-lg">

			<!-- About Section -->
			<div id="about" class="wrapper bg-intermediate">
				<About />
			</div>
			
			<!-- Skills Section -->
			<div id="skills" class="wrapper bg-intermediate mt-0">
				<Skills />
			</div>
		</div>

		<!-- Experience Section -->
		<div id="experience" class="wrapper">
			<Experience />
		</div>

		<!-- Education Section -->
		<div id="education" class="wrapper">
			<Education />
		</div>

		<!-- Portfolio Section -->
		<div id="projects" class="wrapper">
			<Portfolio />
		</div>

		<!-- Contact CTA -->
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	.roles {
		display: none;
	}

	.hero img {
		aspect-ratio: 5 / 4;
		object-fit: cover;
		object-position: top;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	@media (min-width: 50em) {
		.hero {
			text-align: center;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
			justify-content: center;
		}

		.hero img {
			aspect-ratio: 3 / 4;
			border-radius: 4.5rem;
			object-fit: cover;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: "";
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background:
			url("/assets/backgrounds/noise.png") top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: "header header header header" "gallery gallery gallery gallery";
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: "header header header cta" "gallery gallery gallery gallery";
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */

	/* Smooth scrolling for anchor links */
	html {
		scroll-behavior: smooth;
	}

	/* Section spacing improvements */
	.wrapper + .wrapper {
		margin-top: 4rem;
	}

	/* Add padding to sections for anchor navigation */
	#hero,
	#about,
	#experience,
	#education,
	#projects,
	#contact {
		scroll-margin-top: 8rem;
	}

	@media (min-width: 50em) {
		.wrapper + .wrapper {
			margin-top: 6rem;
		}

		#hero,
		#about,
		#experience,
		#education,
		#projects,
		#contact {
			scroll-margin-top: 10rem;
		}
	}

	/* ====================================================== */

	.mention-card {
		display: flex;
		height: 7rem;
		justify-content: center;
		align-items: center;
		text-align: center;
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		color: var(--gray-300);
		background: var(--gradient-subtle);
		box-shadow: var(--shadow-sm);
	}

	@media (min-width: 50em) {
		.mention-card {
			border-radius: 1.5rem;
			height: 9.5rem;
		}
	}
</style>
