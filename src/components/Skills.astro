---
type SkillItem = {
	label: string;
	imgSrc: string;
	alt: string;
};

type SkillSection = {
	id: "frontend" | "backend" | "tools" | "learning";
	label: string;
	items: SkillItem[];
};

const sections: SkillSection[] = [
	{
		id: "frontend",
		label: "Frontend",
		items: [
			{ label: "HTML", imgSrc: "/portfolio/assets/logos/html5.svg", alt: "HTML5" },
			{ label: "CSS", imgSrc: "/portfolio/assets/logos/css3.svg", alt: "CSS3" },
			{ label: "JavaScript", imgSrc: "/portfolio/assets/logos/javascript.svg", alt: "JavaScript" },
			{ label: "TypeScript", imgSrc: "/portfolio/assets/logos/typescript.svg", alt: "TypeScript" },
			{ label: "ReactJS", imgSrc: "/portfolio/assets/logos/react.svg", alt: "React" },
			{ label: "Tailwind", imgSrc: "/portfolio/assets/logos/tailwind.svg", alt: "Tailwind CSS" },
			{ label: "SASS", imgSrc: "/portfolio/assets/logos/sass.svg", alt: "SASS" },
			{ label: "Figma", imgSrc: "/portfolio/assets/logos/figma.svg", alt: "Figma" },
		],
	},
	{
		id: "backend",
		label: "Backend",
		items: [
			{ label: "NodeJS", imgSrc: "/portfolio/assets/logos/nodejs.svg", alt: "Node.js" },
			{ label: "ExpressJS", imgSrc: "/portfolio/assets/logos/express.svg", alt: "Express.js" },
			{ label: "MongoDB", imgSrc: "/portfolio/assets/logos/mongodb.svg", alt: "MongoDB" },
			{ label: "Next.js", imgSrc: "/portfolio/assets/logos/nextjs.svg", alt: "Next.js" },
			{ label: "Apache", imgSrc: "/portfolio/assets/logos/apache.svg", alt: "Apache" },
		],
	},
	{
		id: "tools",
		label: "Tools & DevOps",
		items: [
			{ label: "Git", imgSrc: "/portfolio/assets/logos/git.svg", alt: "Git" },
			{ label: "GitHub", imgSrc: "/portfolio/assets/logos/github.svg", alt: "GitHub" },
			{ label: "Terminal", imgSrc: "/portfolio/assets/logos/terminal.svg", alt: "Terminal" },
			{ label: "VSCode", imgSrc: "/portfolio/assets/logos/vscode.svg", alt: "Visual Studio Code" },
			{ label: "npm", imgSrc: "/portfolio/assets/logos/npm.svg", alt: "npm" },
			{ label: "OpenAI", imgSrc: "/portfolio/assets/logos/openai.svg", alt: "OpenAI" },
			{ label: "AWS", imgSrc: "/portfolio/assets/logos/aws.svg", alt: "AWS" },
		],
	},
	{
		id: "learning",
		label: "Learning",
		items: [
			{ label: "Astro", imgSrc: "/portfolio/assets/logos/astro.svg", alt: "Astro" },
			{ label: "Docker", imgSrc: "/portfolio/assets/logos/docker.svg", alt: "Docker" },
			{ label: "Angular", imgSrc: "/portfolio/assets/logos/angular.svg", alt: "Angular" },
			{ label: "Python", imgSrc: "/portfolio/assets/logos/py.png", alt: "Python" }
		],
	},
];
---

<section id="skills" class="skills-section">
	<div class="skills-container">
		<div class="section-header">
			<h2>Technical Skills</h2>
			<div class="divider"></div>
		</div>

		<div class="skills-grid">
			{sections.map((section) => (
				<article class="skill-category">
					<h3 class="category-title">{section.label}</h3>
					<div class="skills-wrapper">
						{section.items.map((skill) => (
							<div class="skill-badge">
								<img 
									src={skill.imgSrc} 
									alt={skill.alt}
									class="skill-icon"
									width="20"
									height="20"
									loading="lazy"
									
								/>
								<span class="skill-name">{skill.label}</span>
							</div>
						))}
					</div>
				</article>
			))}
		</div>
	</div>
</section>

<style>
	.skills-section {
		padding: 10rem 0 5rem;
	}

	.skills-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-header h2 {
		font-size: var(--text-3xl);
		font-weight: 700;
		color: var(--gray-0);
		margin-bottom: 1rem;
	}

	.divider {
		width: 5rem;
		height: 4px;
		background: var(--accent-regular);
		margin: 0 auto 1rem;
		border-radius: 9999px;
	}

	.description {
		margin-top: 1rem;
		font-size: var(--text-lg);
		color: var(--gray-intermediate-300);
		max-width: 42rem;
		margin-left: auto;
		margin-right: auto;
		line-height: 1.6;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	@media (min-width: 48rem) {
		.skills-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 64rem) {
		.skills-grid {
			grid-template-columns: repeat(3, 1fr);
		}

		.skill-category:nth-child(4) {
			grid-column: 2 / 3;
		}
	}

	.skill-category {
		background: var(--gray-intermediate-100);
		border-radius: 1rem;
		padding: 2rem;
		border: 1px solid var(--gray-600);
		box-shadow: var(--shadow-sm);
	}

	.category-title {
		font-size: var(--text-2xl);
		font-weight: 700;
		color: var(--gray-0);
		margin-bottom: 1.5rem;
		text-align: center;
		padding-bottom: 1rem;
		border-bottom: 1px solid var(--gray-800);
	}

	.skills-wrapper {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.75rem;
	}

	.skill-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-intermediate-200);
		color: var(--gray-200);
		border-radius: 9999px;
		font-size: var(--text-sm);
		font-weight: 500;
		border: 1px solid var(--gray-800);
		box-shadow: var(--shadow-sm);
		transition: all 0.3s ease;
		cursor: default;
	}

	.skill-badge:hover {
		border-color: var(--accent-regular);
		color: var(--accent-regular);
		transform: translateY(-2px);
	}

	.skill-icon {
		width: 20px;
		height: 20px;
		object-fit: contain;
	}

	.skill-name {
		white-space: nowrap;
		font-size: medium;
	}

	@media (min-width: 50em) {
		.section-header h2 {
			font-size: var(--text-4xl);
		}
	}
</style>
