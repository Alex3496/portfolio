---
import Icon from './Icon.astro';
import LucideIcon from './LucideIcon.astro';
---

<section class="contact-info-section box">
	<div class="stack gap-6">
		<div class="section-header">
			<h2>Contact Information</h2>
			<div class="divider"></div>
		</div>
		
		<div class="contact-grid">
			<div class="contact-item">
				<div class="contact-icon">
					<LucideIcon icon="map-pin" size="1.5rem" />
				</div>
				<div class="contact-details">
					<h3>Location</h3>
					<p>Tijuana, Mexico</p>
				</div>
			</div>

			<div class="contact-item">
				<div class="contact-icon">
					<LucideIcon icon="mail" size="1.5rem" />
				</div>
				<div class="contact-details">
					<h3>Email</h3>
					<p><a href="mailto:alejandro.tello.29v@gmail.com">alejandro.tello.29v@gmail.com</a></p>
				</div>
			</div>


			<div class="contact-item">
				<div class="contact-icon">
					<Icon icon="linkedin-logo" size="1.5rem" />
				</div>
				<div class="contact-details">
					<h3>LinkedIn</h3>
					<p><a href="https://linkedin.com/in/manuel-elizondo-887a7313a/" target="_blank">manuel-elizondo-887a7313a</a></p>
				</div>
			</div>

			<div class="contact-item">
				<div class="contact-icon">
					<Icon icon="github-logo" size="1.5rem" />
				</div>
				<div class="contact-details">
					<h3>GitHub</h3>
					<p><a href="https://github.com/Alex3496" target="_blank">Alex3496</a></p>
				</div>
			</div>

			<div class="contact-item">
				<div class="contact-icon">
					<LucideIcon icon="languages" size="1.5rem" />
				</div>
				<div class="contact-details">
					<h3>Languages</h3>
					<p>Spanish (Native)<br>English (Upper-Intermediate B2)</p>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.contact-info-section {
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		padding: 2.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
		margin: 3rem 0;
	}

	.section-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.section-header h2 {
		font-size: var(--text-3xl);
		color: var(--gray-0);
		margin-bottom: 1rem;
	}

	.divider {
		width: 4rem;
		height: 2px;
		background: var(--accent-regular);
		margin: 0 auto;
	}

	.contact-grid {
		display: grid;
		gap: 1.5rem;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	}

	.contact-item {
		display: flex;
		gap: 1rem;
		align-items: flex-start;
		padding: 1.5rem;
		background: var(--gradient-subtle);
		border-radius: 1rem;
		border: 1px solid var(--gray-800);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.contact-item:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.contact-icon {
		flex-shrink: 0;
		color: var(--accent-regular);
		padding: 0.5rem;
		background: var(--gray-999_40);
		border-radius: 0.5rem;
	}

	.contact-details h3 {
		font-size: var(--text-base);
		color: var(--gray-0);
		margin-bottom: 0.25rem;
		font-weight: 600;
	}

	.contact-details p {
		color: var(--gray-300);
		font-size: var(--text-sm);
		line-height: 1.4;
	}

	.contact-details a {
		color: var(--accent-regular);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.contact-details a:hover {
		color: var(--accent-text-over);
		text-decoration: underline;
	}

	@media (min-width: 50em) {
		.contact-info-section {
			padding: 3.5rem;
		}

		.section-header h2 {
			font-size: var(--text-4xl);
		}

		.contact-grid {
			grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
			gap: 2rem;
		}
	}
</style>
