---
interface Props {
	title: string;
	tagline?: string[];
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title } = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		<h1 class="title">{title}</h1>
		<div>
			{Array.isArray(tagline) ? tagline.map((line) => <p class="tagline">{line}</p>) : null}
		</div>
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
		min-height: 50vh; 
		padding-top: 5rem;	
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
		margin-bottom: 0px;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>
