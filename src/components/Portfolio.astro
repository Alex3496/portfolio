---
import type { CollectionEntry } from 'astro:content';
import { Github, ExternalLink } from '@lucide/astro';
import { Code } from 'astro:components';

interface Props {
  projects?: [];
}

const { projects = [
    { 
        id: '1', 
        data: {
            title: 'Nexus',
            img: '/portfolio/assets/screenshots/nexus.png',
            img_alt: 'Screenshot of Nexus Project',
            description: 'Built a material management system with order tracking, invoicing, a product marketplace, and a CRM for client activity. ',
            tags: ['React Native', 'React', 'Node.js', 'MongoDB', 'Express'],
            projectType: 'professional',
            codeLink: null,
            urlPage: 'https://nexusnova.mx/',
        }
    },{ 
        id: '2', 
        data: {
            title: 'Sneacare Miami',
            img: '/portfolio/assets/screenshots/sneacare.png',
            img_alt: 'Screenshot of Sneacare Miami Project',
            description: 'Created a POS system for a shoe-cleaning business with Square integration, customer orders, CRM, and sales analytics to support full operational management.',
            tags: ['Square', 'MERN', 'React', 'Node.js', 'MongoDB', 'Express'],
            projectType: 'professional',
            codeLink: null,
            urlPage: "https://sneacaremiami.com/",
        }
    },{ 
        id: '3', 
        data: {
            title: 'ERP Manantial',
            img: '/portfolio/assets/screenshots/erp.png',
            img_alt: 'Screenshot of ERP Manantial Project',
            description: 'ERP platform to handle its financial information. It uses Syncfy for reliable financial data, generates reports, and includes a CRM module for managing clients.',
            tags: ['MERN', 'React', 'Node.js', 'MongoDB', 'Express'],
            projectType: 'professional',
            codeLink: null,
            urlPage: "https://erp.grupomanantial.com/",
        }
    }
] } = Astro.props as Props;
---

<section class="portfolio-section">
  <div class="portfolio-container">
    <div class="portfolio-header">
      <h2>Featured Projects</h2>
      <div class="divider"></div>
      <p class="description">
        A selection of proyects i have worked on.
      </p>
    </div>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <article class="project-card">
          <div class="project-image-wrapper">
            <div class="image-overlay"></div>
            <img 
              src={project.data.img} 
              alt={project.data.img_alt || project.data.title} 
              class="project-image"
              loading="lazy"
            />
          </div>
          
          <div class="project-content">
            <h3 class="project-title">{project.data.title}</h3>
            <span class={`project-type-badge ${project.data.projectType || 'professional'}`}>
              {project.data.projectType === 'personal' ? 'Personal' : 'Professional'}
            </span>
            <p class="project-description">
              {project.data.description}
            </p>
            
            <div class="project-tags">
              {project.data.tags && project.data.tags.slice(0, 4).map((tag) => (
                <span class="tag">{tag}</span>
              ))}
              {project.data.tags && project.data.tags.length > 4 && (
                <span class="tag tag-more">
                  +{project.data.tags.length - 4}
                </span>
              )}
            </div>
            
            <div class="project-links">
              { project.data.codeLink ? <a 
                href={project.data.codeLink || `/portfolio/work/${project.id}`}
                class="link-code"
              >
                <Github size={16} />
                <span>Code</span>
              </a> : <span></span> }
              { project.data.urlPage ? <a 
                href={project.data.urlPage || `/portfolio/work/${project.id}`}
                class="link-demo"
                target="_blank"
              >
                <span>Live</span>
                <ExternalLink size={16} />
              </a> : <span></span> }
            </div>
          </div>
        </article>
      ))}
    </div>
    
    <div class="view-more">
      <a 
        href="https://github.com/Alex3496" 
        target="_blank" 
        rel="noopener noreferrer"
        class="view-more-btn"
      >
        <Github size={20} />
        <span>View More on GitHub</span>
      </a>
    </div>
  </div>
</section>

<style>
  .portfolio-section {
    padding: 5rem 0;
  }

  .portfolio-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 40rem) {
    .portfolio-container {
      padding: 0 1.5rem;
    }
  }

  @media (min-width: 64rem) {
    .portfolio-container {
      padding: 0 2rem;
    }
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .portfolio-header h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--gray-0);
    margin-bottom: 1rem;
  }

  @media (min-width: 48rem) {
    .portfolio-header h2 {
      font-size: var(--text-4xl);
    }
  }

  .divider {
    width: 5rem;
    height: 4px;
    background: var(--accent-regular);
    margin: 0 auto 1rem;
    border-radius: 9999px;
  }

  .description {
    margin-top: 1rem;
    font-size: var(--text-lg);
    color: var(--gray-300);
    max-width: 42rem;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .projects-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
  }

  .project-card {
    width: 100%;
    max-width: 400px;
  }

  @media (min-width: 48rem) {
    .project-card {
      width: calc(50% - 1rem);
    }
  }

  @media (min-width: 64rem) {
    .project-card {
      width: calc(33.333% - 1.5rem);
    }
  }

  .project-card {
    background: var(--gray-999_40);
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid var(--gray-800);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
    border-color: var(--accent-regular);
    transform: translateY(-4px);
  }

  .project-image-wrapper {
    position: relative;
    overflow: hidden;
    height: 12rem;
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: var(--overlay-img);
    z-index: 10;
    transition: background 0.3s ease;
  }

  .project-card:hover .image-overlay {
    background: transparent;
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .project-card:hover .project-image {
    transform: scale(1.1);
  }

  .project-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .project-title {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--gray-0);
    transition: color 0.3s ease;
    margin: 0 0 0.5rem 0;
  }

  .project-card:hover .project-title {
    color: var(--accent-regular);
  }

  .project-type-badge {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.25rem 0.6rem;
    border-radius: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.75rem;
    width: fit-content;
  }

  .project-type-badge.professional {
    background: var(--accent-overlay);
    color: var(--accent-regular);
    border: 1px solid var(--accent-dark);
  }

  .project-type-badge.personal {
    background: rgba(139, 92, 246, 0.1);
    color: rgb(167, 139, 250);
    border: 1px solid rgba(139, 92, 246, 0.3);
  }

  .project-description {
    color: var(--gray-300);
    font-size: var(--text-sm);
    margin-bottom: 1rem;
    line-height: 1.6;
    flex: 1;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    background: var(--gray-900);
    color: var(--accent-regular);
    border-radius: 0.25rem;
  }

  .tag-more {
    color: var(--gray-400);
  }

  .project-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--gray-800);
  }

  .link-code,
  .link-demo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--text-sm);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .link-code {
    color: var(--gray-400);
  }

  .link-code:hover {
    color: var(--gray-0);
  }

  .link-demo {
    color: var(--accent-regular);
    font-weight: 500;
  }

  .link-demo:hover {
    color: var(--accent-light);
  }

  .view-more {
    text-align: center;
    margin-top: 3rem;
  }

  .view-more-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--gray-900);
    color: var(--gray-0);
    border-radius: 0.5rem;
    text-decoration: none;
    border: 1px solid var(--gray-800);
    transition: all 0.3s ease;
  }

  .view-more-btn:hover {
    background: var(--gray-800);
    border-color: var(--gray-700);
  }
</style>
